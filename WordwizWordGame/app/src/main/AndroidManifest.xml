<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deetechs.wordwiz"
    android:versionCode="2"
    android:versionName="1.1.0" >
    <uses-sdk android:minSdkVersion="13" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity            
            android:name=".WordWizAppActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
            android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HowToPlayActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".InstructionsActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".PlayGameActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode=""></activity>
         <activity android:name=".ResumePlayActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".EndGameActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".LevelSeparatorActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".LevelSepResumeActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>
         <activity android:name=".WrongActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>
         <activity android:name=".WrongResumeActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>
         <activity android:name=".OopsActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"></activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
         
    </application>
    	<!-- Internet is mandatory permission -->
   		<uses-permission android:name="android.permission.INTERNET" />

   		<!-- Optional permission to serve location-based ads -->
   		<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
   		<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

	   <!-- Optional permission to enable the user to make calls from ads -->
	   <uses-permission android:name="android.permission.CALL_PHONE" />
	
	   <!-- Optional permission to get the network state for targeting purposes -->
	   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>