     android:layout_width="240dip"
     android:layout_height="wrap_content">  
     <ImageView
        android:id="@+id/image_happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dip"       
